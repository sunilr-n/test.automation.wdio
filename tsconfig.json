{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "typeRoots": ["./types"],
    "types": [
      "node",
      "webdriverio/sync",
      "@wdio/jasmine-framework"
    ]
  },
  "include": [
    "./src/types/**/*.ts",
    "./src/tests/**/*.ts",
    "./src/pageobjects/**/*.ts",
    "./wdio.conf.ts"
  ]
}